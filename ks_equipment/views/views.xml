    <!-- Top menu item -->

    <menuitem name="ks_equipment" id="ks_equipment.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Attribution" id="ks_equipment.menu_1"  parent="ks_equipment.menu_root"/>
    <menuitem name="Matériel" id="ks_equipment.menu_2"  parent="ks_equipment.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="ks_equipment.menu_1_list" action="attribute_window" parent="ks_equipment.menu_1"
              />
    <menuitem name="List" id="ks_equipment.menu_2_list" parent="ks_equipment.menu_2"
              action="template_window"/>
